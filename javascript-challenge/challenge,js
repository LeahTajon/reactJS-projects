/*
Challenge 1:

Given an array of numbers, return an array of each number, squared
*/

const nums = [1, 2, 3, 4, 5]

const squared = nums.map((item) => item ** 2);
console.log(squared);

/*
Challenge 2:
Given an array of strings, return an array where the first letter of 
of each string is capitalized
*/

const names = ["alice", "bob", "charlie", "danielle"]

const capitalized = names.map((name) => name.charAt(0).toUpperCase() + name.slice(1))
console.log(capitalized);

/*
Challenge 3:
Given an array of strings, return an array of strings
that wraps of the original strings in an HTML-like <p></p> tag.
*/
const pokemon = ["Bulbasaur", "Charmander", "Squirtle"]

const elements = pokemon.map(mon => `<p>${mon}</p>`)
console.log(elements)